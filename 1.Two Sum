class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int i, j;
        i = 0;
        j = nums.size() - 1;
        vector<int> two_sum;
        vector<int> temp;
        temp = nums;
        sort(nums.begin(), nums.end());
        while(i < j)
        {
            int sum = nums[i]+ nums[j];
            if(sum == target)
            {
                for(int k = 0; k < temp.size(); k ++)
                {
                    if(temp[k] == nums[i] || temp[k] == nums[j])
                    {
                        two_sum.push_back(k);
                    }
                }
                return two_sum;
            }
            else if(sum > target)
            {
                j --;
            }
            else
            {
                i ++;
            }
        }
        return two_sum;
    }
};
